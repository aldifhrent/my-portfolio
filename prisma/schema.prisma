generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL") // uses connection pooling
  directUrl = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
}

enum TypeProject {
  SLICING
  FULL_STACK

  @@map("typeproject")
}

model Project {
  id          String      @default(cuid())
  projectId   String      @unique
  name        String
  description String
  typeProject TypeProject
  tech        String[]
  year        String
  website     String
  repository  String
  createAt    DateTime    @default(now())
  updateAt    DateTime

  @@map("project")
}

model workExperience {
  id         String   @default(cuid())
  workId     String   @unique
  name       String
  desription String
  date       DateTime
  createAt   DateTime @default(now())
  updateAt   DateTime

  @@map("work")
}
